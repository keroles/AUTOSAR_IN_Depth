OIL_VERSION = "2.5" : "com_internal_s2";

#include <arch.oil>

IMPLEMENTATION trampoline {
  TASK {
    UINT32 PRIORITY = 1;
  };
  ISR {
  };
};

CPU test {
  OS config {
    STATUS = EXTENDED;
    SHUTDOWNHOOK = TRUE;
    BUILD = TRUE {
      APP_SRC = "com_internal_s2.c";
      APP_SRC = "task1_instance.c";
      APP_SRC = "task2_instance.c";
      APP_SRC = "comerror_instance1.c";
      APP_SRC = "comerror_instance2.c";
      APP_SRC = "comerror_instance3.c";
      APP_SRC = "comerror_instance4.c";
      APP_SRC = "comerror_instance5.c";
      TRAMPOLINE_BASE_PATH = "../../..";
      APP_NAME = "com_internal_s2_non_exe";
    };
  };

  COM config {
    COMSTATUS = COMEXTENDED;
    COMERRORHOOK = TRUE;
    COMUSEGETSERVICEID = TRUE;
    COMUSEPARAMETERACCESS = FALSE;
    COMSTARTCOMEXTENSION = FALSE;
  };
 
  APPMODE std {
  };

  TASK t1 {
    PRIORITY = 1;
    AUTOSTART = TRUE { APPMODE = std; };
    ACTIVATION = 1;
    SCHEDULE = NON;
    MESSAGE = sm;
  };

  TASK t2 {
    PRIORITY = 2;
    AUTOSTART = FALSE;
    ACTIVATION = 1;
    SCHEDULE = NON;
    MESSAGE = rm;
  };
        
  MESSAGE sm {
    MESSAGEPROPERTY = SEND_STATIC_INTERNAL {
      CDATATYPE = "uint8";
    };
    NOTIFICATION = NONE;
  };
    
  MESSAGE rm {
    MESSAGEPROPERTY = RECEIVE_QUEUED_INTERNAL {
      SENDINGMESSAGE = sm;
      QUEUESIZE = 3;
    };
    NOTIFICATION = NONE;
  }; 
};

