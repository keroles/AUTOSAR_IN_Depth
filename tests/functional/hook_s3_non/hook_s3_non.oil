OIL_VERSION = "2.5" : "hook_s3";

#include <arch.oil>

IMPLEMENTATION trampoline {
  TASK {
    UINT32 [1..10] PRIORITY = 1;
  };
};

CPU test {
  OS config {
    STATUS = EXTENDED;
    BUILD = TRUE {
      APP_SRC = "hook_s3.c";
      APP_SRC = "error_instance.c";
      APP_SRC = "task1_instance.c";
      TRAMPOLINE_BASE_PATH = "../../..";
      APP_NAME = "hook_s3_non_exe";
    };
    SHUTDOWNHOOK = TRUE;
    STARTUPHOOK = TRUE;
    ERRORHOOK = TRUE;
  };

  APPMODE std {};

  TASK t1 {
    AUTOSTART = TRUE { APPMODE = std; };
    PRIORITY = 1;
    ACTIVATION = 1;
    SCHEDULE = NON;
    EVENT = Event1;
  };
 
  COUNTER Counter1 {
    MAXALLOWEDVALUE = 16;
    TICKSPERBASE = 10;
    MINCYCLE = 1;
  };
 
  ALARM Alarm1 {
    COUNTER = Counter1;
    ACTION = SETEVENT {
      TASK = t1;
      EVENT = Event1;
    };
    AUTOSTART = FALSE;
  };
 
  EVENT Event1 {
    MASK = AUTO;
  };
};

